---
import Layout from "./Layout.astro"
const { frontmatter } = Astro.props
---

<Layout title={frontmatter.title}>
  <main
    class="flex flex-col min-h-screen bg-gray-100 text-black dark:text-white"
  >
    <section class="w-full max-w-4xl mx-auto p-8">
      <h1 class="text-4xl font-bold text-center mb-6">{frontmatter.title}</h1>
      <article class="prose lg:prose-xl bg-white p-4">
        <slot class="bg-yellow-300" />
      </article>
    </section>
  </main>
</Layout>
